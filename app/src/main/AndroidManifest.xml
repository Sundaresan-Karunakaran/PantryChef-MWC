<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Sensör için -->
    <uses-permission android:name="android.permission.ACTIVITY_RECOGNITION" />

    <!-- Kamera için -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Gemini'ye istek atmak için internet izni -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Cihazda kamera olduğunu bildiriyoruz (zorunlu değil ama güzel) -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Login ilk açılan ekran -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Register -->
        <activity
            android:name=".RegisterActivity"
            android:exported="false" />

        <!-- Profil ayarı -->
        <activity
            android:name=".ProfileSetupActivity"
            android:exported="false" />

        <!-- Ana uygulama (bottom nav olan) -->
        <activity
            android:name=".MainActivity"
            android:exported="true" />

        <!-- Receipt scanner ekranı -->
        <activity
            android:name=".ReceiptScannerActivity"
            android:exported="false" />

        <!-- Ads meta-data (eskisi gibi bıraktım) -->
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3940256099942544~3347511713" />

        <!-- Fotoğrafı FileProvider ile paylaşmak için -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>
