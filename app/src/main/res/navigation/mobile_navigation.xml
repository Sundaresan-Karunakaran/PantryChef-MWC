<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/loginFragment">

    <action
        android:id="@+id/action_global_to_loginFragment"
        app:destination="@id/loginFragment"
        app:popUpTo="@id/mobile_navigation"
        app:popUpToInclusive="true" />



    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.stepappv3.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">

    </fragment>

    <fragment
        android:id="@+id/profileSetupFragment"
        android:name="com.example.stepappv3.ui.profile.ProfileSetupFragment"
        android:label="Complete Your Profile"
        tools:layout="@layout/fragment_profile_setup" >

        <action
            android:id="@+id/action_profileSetupFragment_to_navigation_home"
            app:destination="@id/navigation_home"
            app:popUpTo="@id/mobile_navigation"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.stepappv3.login.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_loginFragment_to_navigation_home"
            app:destination="@id/navigation_home"
            app:popUpTo="@id/mobile_navigation"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_loginFragment_to_profileSetupFragment"
            app:destination="@id/profileSetupFragment"
            app:popUpTo="@id/mobile_navigation"
            app:popUpToInclusive="true" />


    </fragment>

    <fragment
        android:id="@+id/pantryListFragment"
        android:name="com.example.stepappv3.ui.pantry.PantryListFragment"
        android:label="{categoryName}"
        tools:layout="@layout/fragment_pantry_list" >

        <argument
            android:name="categoryName"
            app:argType="string" />

    </fragment>


    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.stepappv3.ui.profile.ProfileFragment"
        android:label="Home"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/navigation_pantry"
        android:name="com.example.stepappv3.ui.pantry.PantryFragment"
        android:label="Home"
        tools:layout="@layout/fragment_pantry" >

        <action
            android:id="@+id/action_pantryFragment_to_pantryListFragment"
            app:destination="@id/pantryListFragment" />

    </fragment>

    <fragment
        android:id="@+id/navigation_recommendations"
        android:name="com.example.stepappv3.ui.recipes.RecommendationFragment"
        android:label="Recipes"
        tools:layout="@layout/fragment_recommendation" >

        <action
            android:id="@+id/action_recommendationsFragment_to_recipeDetailFragment"
            app:destination="@id/recipeDetailFragment" />

    </fragment>

    <fragment
        android:id="@+id/recipeDetailFragment"
        android:name="com.example.stepappv3.ui.recipes.RecipeDetailFragment"
        android:label="{recipeName}"
        tools:layout="@layout/fragment_recipe_detail">

        <argument
            android:name="recipeId"
            app:argType="integer" />

        <argument
            android:name="recipeName"
            app:argType="string" />

    </fragment>

    <fragment
        android:id="@+id/navigation_visualization"
        android:name="com.example.stepappv3.ui.visualization.VisualizationFragment"
        android:label="Visualizations"
        tools:layout="@layout/fragment_visualization" />



</navigation>
    