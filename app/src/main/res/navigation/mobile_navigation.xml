<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.stepappv3.login.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/navigation_home"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_loginFragment_to_onboardingInfoFragment"
            app:destination="@id/onboardingInfoFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.stepappv3.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <argument
            android:name="userId"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/onboardingInfoFragment"
        android:name="com.example.stepappv3.ui.onboarding.OnboardingInfoFragment"
        android:label="Info"
        tools:layout="@layout/fragment_onboarding_info">
        <action
            android:id="@+id/action_info_to_allergies"
            app:destination="@id/onboardingAllergiesFragment" />
    </fragment>

    <fragment
        android:id="@+id/onboardingAllergiesFragment"
        android:name="com.example.stepappv3.ui.onboarding.OnboardingAllergiesFragment"
        android:label="Allergies"
        tools:layout="@layout/fragment_onboarding_allergies">
        <action
            android:id="@+id/action_allergies_to_diet"
            app:destination="@id/onboardingDietFragment" />
    </fragment>

    <fragment
        android:id="@+id/onboardingDietFragment"
        android:name="com.example.stepappv3.ui.onboarding.OnboardingDietFragment"
        android:label="Diet"
        tools:layout="@layout/fragment_onboarding_diet">

        <action
            android:id="@+id/action_diet_to_activity"
            app:destination="@id/onboardingActivityFragment" />
    </fragment>

    <fragment
        android:id="@+id/onboardingActivityFragment"
        android:name="com.example.stepappv3.ui.onboarding.OnboardingActivityFragment"
        android:label="Activity Level"
        tools:layout="@layout/fragment_onboarding_activity">

        <action
            android:id="@+id/action_activity_to_goal"
            app:destination="@id/onboardingGoalFragment" />
    </fragment>

    <fragment
        android:id="@+id/onboardingGoalFragment"
        android:name="com.example.stepappv3.ui.onboarding.OnboardingGoalFragment"
        android:label="Goal"
        tools:layout="@layout/fragment_onboarding_goal">
        <action
            android:id="@+id/action_goal_to_home"
            app:destination="@id/navigation_home"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="false" />
    </fragment>

    <fragment
        android:id="@+id/navigation_step"
        android:name="com.example.stepappv3.ui.step.StepFragment"
        android:label="Step"
        tools:layout="@layout/fragment_step" />

    <fragment
        android:id="@+id/pantryFragment"
        android:name="com.example.stepappv3.ui.pantry.PantryFragment"
        android:label="Pantry"
        tools:layout="@layout/fragment_pantry">
        <action
            android:id="@+id/action_pantryFragment_to_pantryListFragment"
            app:destination="@id/pantryListFragment" />
    </fragment>

    <fragment
        android:id="@+id/pantryListFragment"
        android:name="com.example.stepappv3.ui.pantry.PantryListFragment"
        android:label="Pantry List"
        tools:layout="@layout/fragment_pantry_list">
        <argument
            android:name="categoryName"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/navigation_recommendations"
        android:name="com.example.stepappv3.ui.recipes.RecommendationFragment"
        android:label="Recipes"
        tools:layout="@layout/fragment_recommendation">
        <action
            android:id="@+id/action_recommendationsFragment_to_recipeDetailFragment"
            app:destination="@id/recipeDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/recipeDetailFragment"
        android:name="com.example.stepappv3.ui.recipes.RecipeDetailFragment"
        android:label="{recipeName}"
        tools:layout="@layout/fragment_recipe_detail">
        <argument
            android:name="recipeId"
            app:argType="integer" />
        <argument
            android:name="recipeName"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.stepappv3.ui.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/nav_settings_page"
        android:name="com.example.stepappv3.ui.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />

</navigation>