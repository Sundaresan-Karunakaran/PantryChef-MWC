<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activity Level"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How active are you daily?"
        android:textSize="16sp"
        android:alpha="0.7"
        android:layout_marginBottom="32dp"/>

    <RadioGroup
        android:id="@+id/radioGroupActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rbSedentary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sedentary (Little or no exercise)"
            android:padding="16dp"
            android:layout_marginBottom="8dp"/>

        <RadioButton
            android:id="@+id/rbLight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lightly Active (1-3 days/week)"
            android:padding="16dp"
            android:layout_marginBottom="8dp"/>

        <RadioButton
            android:id="@+id/rbModerate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Moderately Active (3-5 days/week)"
            android:padding="16dp"
            android:layout_marginBottom="8dp"/>

        <RadioButton
            android:id="@+id/rbActive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Very Active (6-7 days/week)"
            android:padding="16dp"
            android:layout_marginBottom="8dp"/>
    </RadioGroup>

    <View android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Next"
        app:cornerRadius="30dp"/>

</LinearLayout>